<section class="section is-small is-flex is-justify-content-center">
 <div class="ui divided items">
  <div class="item">
    <div class="image">
      <img class="ui medium circular image" src="/assets/male_avatar.svg">
    </div>
    <div class="content">
      <a class="header">{{first_name}} {{last_name}}</a> 
      <div class="meta">
        <span class="">Joined On:{{date}}</span>
      </div>
      <div class="description">
        <p> <b>Username:</b> {{user_name}}</p>
        <p> <b>Email:</b> {{email}}</p>
        <p> <b>Bio:</b></p> {{bio}}</p>
      </div>
      <div class="mt-4">
        <a href="/profile-edit" class="button is-dark"><i class="fas fa-edit"></i>&nbsp Edit Account</a>
        <button class="button is-dark"><i class="fas fa-trash-alt" id="deleteAccount"></i></i>&nbsp Delete Account</button>
      </div>
    </div>
  </div>
</div>
</section>

